<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="90dp" xmlns:id="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="@dimen/mediumMargin"
    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:weightSum="100"
        >
            <include android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="20"
                     layout="@layout/image"
            />

            <include android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="60"
                     layout="@layout/title"
            />

          <include android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="20"
                   layout="@layout/social"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>